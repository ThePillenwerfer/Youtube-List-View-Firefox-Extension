{
  "manifest_version": 3,
  "name": "YouTube Subscriptions List View",
  "version": "1.2",
  "description": "Forces YouTube into a list view with customizable settings.",
  "action": {
    "default_popup": "popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "FixYT@ThePillenwerfer",
      "data_collection_permissions": {
        "required": [
          "none"
        ],
        "optional": []
      }
    }
  },
 
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage", "tabs"
  ],
    "host_permissions": [
    "https://www.youtube.com/*"
  ]
}
